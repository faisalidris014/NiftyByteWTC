{
  "name": "windows-troubleshooting-companion",
  "version": "1.0.0",
  "description": "AI-powered troubleshooting companion for Windows users",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npm run build:dev && electron . --dev",
    "build": "webpack --mode=production",
    "build:dev": "webpack --config webpack.dev.js",
    "build:main": "webpack --config webpack.main.js",
    "build:renderer": "webpack --config webpack.renderer.js",
    "dev:renderer": "webpack serve --config webpack.dev.js",
    "watch:main": "webpack --config webpack.main.js --watch",
    "dist": "electron-builder --publish=never",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "electron",
    "troubleshooting",
    "ai",
    "windows",
    "system-tray"
  ],
  "author": "NiftyByte",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^9.6.0",
    "crypto-js": "^4.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/crypto-js": "^4.2.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/uuid": "^10.0.0",
    "css-loader": "^7.1.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "html-webpack-plugin": "^5.6.4",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^6.0.1"
  },
  "build": {
    "appId": "com.niftybyte.wtc",
    "productName": "Windows Troubleshooting Companion",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
